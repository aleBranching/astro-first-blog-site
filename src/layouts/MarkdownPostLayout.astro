---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <div class="tags">{frontmatter.tags.map(ele => <p class="tag"><a href=`/tags/${ele}`>{ele}</a></p>)}</div>
  <h3>written by: {frontmatter.author}</h3>
  <h3>Publish date: {frontmatter.pubDate.slice(0, 10)}</h3>
  <br />
  <p>Description: {frontmatter.description}</p>
  <img src={frontmatter.image.url} alt={frontmatter.image.alt} width="300" />
  <slot />
</BaseLayout>

<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>